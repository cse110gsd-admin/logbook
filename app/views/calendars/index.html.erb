<h1>Listing calendars</h1>

<table>
  <tr>
    <th>User</th>
    <th>Day</th>
    <th>Month</th>
    <th>Year</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.user_id %></td>
    <td><%= calendar.day %></td>
    <td><%= calendar.month %></td>
    <td><%= calendar.year %></td>
    <td><%= calendar.event_id %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Destroy', calendar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

